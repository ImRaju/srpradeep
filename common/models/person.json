{
  "name": "person",
  "base": "PersistedModel",
  "strict": false,
  "idInjection": false,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "fname": {
      "type": "string",
      "required": true
    },
    "lname": {
      "type": "string",
      "required": true
    },
    "pic": {
      "type": "string"
    },
    "account": {
      "type": "accountbit"
    },
    "contacts": {
      "type": [
        "contactbit"
      ]
    },
    "permissions": {
      "type": [
        "permsbit"
      ]
    },
    "verifications": {
      "type": [
        "veribit"
      ]
    }
  },
  "validations": [],
  "relations": {
    "certificate": {
      "type": "hasMany",
      "model": "certbit",
      "foreignKey": ""
    },
    "education": {
      "type": "hasMany",
      "model": "edubit",
      "foreignKey": ""
    },
    "experience": {
      "type": "hasMany",
      "model": "expbit",
      "foreignKey": ""
    },
    "profile": {
      "type": "hasMany",
      "model": "profilebit",
      "foreignKey": ""
    },
    "project": {
      "type": "hasMany",
      "model": "projbit",
      "foreignKey": ""
    },
    "awards": {
      "type": "hasMany",
      "model": "awardbit",
      "foreignKey": ""
    },
    "publications": {
      "type": "hasMany",
      "model": "publbit",
      "foreignKey": ""
    },
    "volunteer": {
      "type": "hasMany",
      "model": "volbit",
      "foreignKey": ""
    },
    "resumes": {
      "type": "hasMany",
      "model": "resume",
      "foreignKey": ""
    },
    "user": {
      "type": "belongsTo",
      "model": "User",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": [
        "signup",
        "signin",
        "sharedProfile",
        "privacy"
      ]
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": [
        "linkFromApp",
        "linkedProfile",
        "resetPassword"
      ]
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
